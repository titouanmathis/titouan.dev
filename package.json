{
  "name": "~",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "iles dev",
    "build": "iles build",
    "preview": "iles preview --open --port 5050",
    "lint": "npm run lint:oxlint && npm run lint:stylelint && npm run lint:prettier",
    "lint:oxlint": "oxlint src/",
    "lint:stylelint": "stylelint src/**/*.{css,vue} --cache",
    "lint:prettier": "prettier -c src/ --cache",
    "fix": "npm run fix:oxlint && npm run fix:stylelint && npm run fix:prettier",
    "fix:oxlint": "npm run lint:oxlint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write"
  },
  "devDependencies": {
    "@iconify-json/bx": "^1.2.2",
    "@iconify-json/carbon": "^1.2.13",
    "@islands/feed": "^0.10.0-beta.1",
    "@islands/headings": "^0.10.0-beta.1",
    "@islands/icons": "^0.10.0-beta.1",
    "@islands/prism": "^0.10.0-beta.1",
    "@studiometa/prettier-config": "^4.4.0",
    "@studiometa/stylelint-config": "^4.1.1",
    "@tailwindcss/vite": "4.1.14",
    "oxlint": "1.19.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@studiometa/js-toolkit": "^3.1.1",
    "@studiometa/playground": "0.1.5",
    "@vueuse/components": "13.9.0",
    "@vueuse/core": "^13.9.0",
    "iles": "^0.10.0-beta.1",
    "vue": "3.5.22"
  },
  "exports": {
    "./*": "./src/*"
  },
  "stylelint": {
    "extends": "@studiometa/stylelint-config",
    "rules": {
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "config",
            "custom-variant",
            "theme"
          ]
        }
      ]
    }
  },
  "prettier": "@studiometa/prettier-config"
}
